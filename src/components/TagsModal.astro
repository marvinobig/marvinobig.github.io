---
import { getCollection } from "astro:content";
import Tag from "./Tag.astro";

const allPosts = await getCollection("blog");
const publishedPosts = allPosts.filter((post) => !post.data.draft);
const uniqueTags = [
    ...new Set(publishedPosts.map((post) => post.data.tags).flat()),
];
---

<style>
    dialog {
        width: 100%;
        max-width: 450px;
        border: 2px solid #272727;
        background-color: #fcfcfc;
    }

    dialog::backdrop {
        background-color: #272727ad;
    }

    dialog > header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        margin-bottom: 20px;
    }

    dialog > section {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 20px;
    }

    button {
        font-size: 24px;
        background-color: #272727;
        color: #fcfcfc;
        padding: 10px 20px;
        border: 2px solid #272727;
        padding: 0 20px;
        align-self: stretch;
    }

    dialog > header > button:focus {
        outline: none;
    }

    @media (prefers-color-scheme: dark) {
        dialog {
            border: 2px solid #fcfcfc;
            background-color: #272727;
        }

        dialog::backdrop {
            background-color: #fcfcfcad;
        }

        button {
            background-color: #fcfcfc;
            color: #272727;
            border: 2px solid #fcfcfc;
        }
    }
</style>

<button id="tags-modal-open-btn"> Tags</button>
<dialog id="tags-modal">
    <header>
        <h2>Filter Posts by Tags</h2>
        <button id="tags-modal-close-btn">X</button>
    </header>

    <section>
        {uniqueTags.map((tag) => <Tag tag={tag} />)}
    </section>
</dialog>

<script>
    const showBtn = document.getElementById("tags-modal-open-btn");
    const closeBtn = document.getElementById("tags-modal-close-btn");
    const modal = document.getElementById("tags-modal");

    showBtn.addEventListener("click", () => {
        modal.showModal();
    });

    closeBtn.addEventListener("click", (event) => {
        modal.close();
    });
</script>
